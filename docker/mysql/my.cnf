[mysqld]

# ================= Connections =================
max_connections = 1000          # Safe high number for 16GB RAM
thread_cache_size = 100         # Cache threads for reuse
wait_timeout = 300              # 5 minutes for idle non-interactive connections
interactive_timeout = 300       # 5 minutes for interactive sessions

# ================= Logging =================
log-error = /var/log/mysql/error.log
log_error_verbosity = 2         # Errors + warnings

slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2             # Log queries longer than 2s
log_queries_not_using_indexes = 1

general_log = 0                 # Keep off in production
general_log_file = /var/log/mysql/general.log

# ================= InnoDB =================
innodb_buffer_pool_size = 12G       # ~75% of 16GB RAM
innodb_buffer_pool_instances = 12   # Split buffer pool for parallelism
innodb_log_file_size = 512M
innodb_flush_log_at_trx_commit = 2  # Trade-off between durability and performance
innodb_file_per_table = 1
innodb_flush_method = O_DIRECT      # Avoid OS cache duplication

# ================= Caches =================
table_open_cache = 2000
tmp_table_size = 128M
max_heap_table_size = 128M

# ================= Performance & Security =================
skip_name_resolve = 1           # Avoid DNS lookup for connections
performance_schema = 1          # Enable for monitoring

# ================= Docker-specific paths =================
# Ensure directories exist and are writable by MySQL
# These paths can be mounted as Docker volumes for persistence
datadir = /var/lib/mysql
log_error = /var/log/mysql/error.log
slow_query_log_file = /var/log/mysql/slow.log
general_log_file = /var/log/mysql/general.log
