{
    "name": "rxcod9/php-swoole-crud-microservice",
    "description": "PHP Swoole CRUD Microservice",
    "type": "project",
    "license": "MIT",
    "require": {
        "monolog/monolog": "^3.6",
        "nesbot/carbon": "^3.10",
        "promphp/prometheus_client_php": "^2.10",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.88",
        "phpdocumentor/reflection-docblock": "^5.6",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^12.4",
        "rector/rector": "^2.2",
        "squizlabs/php_codesniffer": "^4.0",
        "swoole/ide-helper": "^6.0",
        "zircote/swagger-php": "^5.4"
    },
    "scripts": {
        "start": "php public/index.php",
        "test": "vendor/bin/phpunit",
        "openapi:generate": "vendor/bin/openapi --output public/openapi.json src",
        "phpcs": "vendor/bin/phpcs ./src --encoding=utf-8 --standard=phpcs.xml --runtime-set testVersion 8.4 --parallel=1 --report=full",
        "phpmd": "vendor/bin/phpmd ./src text phpmd.xml --report-file=phpmd.csv",
        "phpstan": "vendor/bin/phpstan analyse --configuration=phpstan.neon --memory-limit=-1 -v",
        "phpcbf": "vendor/bin/phpcbf -p ./src --encoding=utf-8 --standard=phpcs.xml --runtime-set testVersion 8.4 --parallel=1",
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix src --config=.php-cs-fixer.php",
        "rector": "vendor/bin/rector process src --ansi"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/",
            "RectorRules\\": "tools/rector/"
        },
        "files": [
            "src/Support/helpers.php"
        ]
    },
    "config": {
        "platform": {
            "php": "8.4"
        },
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Ramakant Gangwar",
            "email": "14928642+rxcod9@users.noreply.github.com"
        }
    ]
}
