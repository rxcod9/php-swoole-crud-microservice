{
    "title": "PHP Swoole CRUD Microservice",
    "uid": "php-swoole-crud-microservice",
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 36,
    "version": 1,
    "panels": [
        {
            "type": "timeseries",
            "title": "Total Requests/sec",
            "gridPos": {
                "x": 0,
                "y": 0,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "rate(http_requests_total_Requests[1m])",
                    "legendFormat": "Requests/sec"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Requests Errors (5xx)",
            "gridPos": {
                "x": 12,
                "y": 0,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total_Requests{status=~\"5..\"}[1m]))",
                    "legendFormat": "5xx Errors"
                }
            ],
            "alert": {
                "alertRuleTags": {},
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                10
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg",
                            "params": []
                        },
                        "type": "query"
                    }
                ],
                "executionErrorState": "alerting",
                "for": "1m",
                "name": "High 5xx Errors",
                "noDataState": "no_data",
                "notifications": []
            }
        },
        {
            "type": "timeseries",
            "title": "Requests 4xx",
            "gridPos": {
                "x": 0,
                "y": 6,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "sum(rate(http_requests_total_Requests{status=~\"4..\"}[1m]))",
                    "legendFormat": "4xx Errors"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                20
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg",
                            "params": []
                        },
                        "type": "query"
                    }
                ],
                "for": "5m",
                "name": "High 4xx Errors",
                "noDataState": "no_data"
            }
        },
        {
            "type": "bargauge",
            "title": "Request Count per Endpoint",
            "gridPos": {
                "x": 12,
                "y": 6,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "sum by(path)(rate(http_requests_total_Requests[1m]))",
                    "legendFormat": "{{path}}"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Avg HTTP Latency",
            "gridPos": {
                "x": 0,
                "y": 12,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "rate(http_request_seconds_Latency_sum[1m]) / rate(http_request_seconds_Latency_count[1m])",
                    "legendFormat": "Avg Latency"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                0.5
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg",
                            "params": []
                        },
                        "type": "query"
                    }
                ],
                "for": "1m",
                "name": "High Avg Latency",
                "noDataState": "no_data"
            }
        },
        {
            "type": "heatmap",
            "title": "HTTP Request Latency Heatmap",
            "gridPos": {
                "x": 12,
                "y": 12,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "sum by(le)(rate(http_request_seconds_Latency_bucket[1m]))",
                    "format": "heatmap",
                    "legendFormat": "â‰¤{{le}}s"
                }
            ],
            "color": {
                "mode": "spectrum"
            }
        },
        {
            "type": "timeseries",
            "title": "Latency P95",
            "gridPos": {
                "x": 0,
                "y": 18,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by(le)(rate(http_request_seconds_Latency_bucket[1m])))",
                    "legendFormat": "P95"
                }
            ]
        },
        {
            "type": "timeseries",
            "title": "Latency P99",
            "gridPos": {
                "x": 12,
                "y": 18,
                "w": 12,
                "h": 6
            },
            "targets": [
                {
                    "expr": "histogram_quantile(0.99, sum by(le)(rate(http_request_seconds_Latency_bucket[1m])))",
                    "legendFormat": "P99"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                1
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg",
                            "params": []
                        },
                        "type": "query"
                    }
                ],
                "for": "1m",
                "name": "High P99 Latency",
                "noDataState": "no_data"
            }
        },
        {
            "type": "stat",
            "title": "PHP Memory Usage",
            "gridPos": {
                "x": 0,
                "y": 24,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "php_memory_usage_bytes",
                    "legendFormat": "Memory"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                1e9
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg"
                        },
                        "type": "query"
                    }
                ],
                "for": "1m",
                "name": "High PHP Memory Usage",
                "noDataState": "no_data"
            }
        },
        {
            "type": "timeseries",
            "title": "PHP CPU Usage",
            "gridPos": {
                "x": 6,
                "y": 24,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "rate(php_cpu_seconds_total[1m])",
                    "legendFormat": "CPU"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                80
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg"
                        },
                        "type": "query"
                    }
                ],
                "for": "30s",
                "name": "High PHP CPU Usage",
                "noDataState": "no_data"
            }
        },
        {
            "type": "stat",
            "title": "Swoole Active Connections",
            "gridPos": {
                "x": 12,
                "y": 24,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "swoole_connections_active",
                    "legendFormat": "Active"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                1000
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg"
                        },
                        "type": "query"
                    }
                ],
                "for": "1m",
                "name": "High Active Connections",
                "noDataState": "no_data"
            }
        },
        {
            "type": "timeseries",
            "title": "Swoole Total Connections",
            "gridPos": {
                "x": 18,
                "y": 24,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "increase(swoole_connections_total[1m])",
                    "legendFormat": "Total"
                }
            ]
        },
        {
            "type": "stat",
            "title": "Swoole Task Waiting",
            "gridPos": {
                "x": 0,
                "y": 28,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "swoole_task_waiting",
                    "legendFormat": "Waiting"
                }
            ],
            "alert": {
                "conditions": [
                    {
                        "evaluator": {
                            "params": [
                                50
                            ],
                            "type": "gt"
                        },
                        "operator": {
                            "type": "and"
                        },
                        "query": {
                            "params": [
                                "A"
                            ]
                        },
                        "reducer": {
                            "type": "avg"
                        },
                        "type": "query"
                    }
                ],
                "for": "1m",
                "name": "High Swoole Task Waiting",
                "noDataState": "no_data"
            }
        },
        {
            "type": "bargauge",
            "title": "Requests > 500ms",
            "gridPos": {
                "x": 6,
                "y": 28,
                "w": 6,
                "h": 4
            },
            "targets": [
                {
                    "expr": "(sum(rate(http_request_seconds_Latency_count[1m])) - sum(rate(http_request_seconds_Latency_bucket{le=\"0.5\"}[1m])))",
                    "legendFormat": "Slow Requests"
                }
            ]
        }
    ],
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "timepicker": {
        "refresh_intervals": [
            "5s",
            "10s",
            "30s",
            "1m",
            "5m",
            "15m"
        ],
        "time_options": [
            "5m",
            "15m",
            "1h",
            "6h",
            "12h",
            "24h"
        ]
    }
}